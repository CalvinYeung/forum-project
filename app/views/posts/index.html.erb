<div class = "postIndex">
<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Likes</th>
      <th># of Comments</th>
      <th>Created By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.likes %></td>
        <td><%= post.comments.length%></td>
        <td><%= post.user.full_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Order By likes,', posts_ordered_by_likes_path %>

<%= link_to 'Order By Comments', posts_ordered_by_comments_path %>
</div>
