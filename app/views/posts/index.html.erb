
<div class="container">
  <div class="row sortButtons">
      <a class= "btn btn-success"href="/posts/new">Create A New Post</a>
  </div>
</div>

<div class="container postIndexList">
  <div class="row postIndexTopBar">
      <h3 class="col-xs-8">Lets Chit-Chat!</h3>
       <a class="btn btn-success col-xs-2" href="/posts_ordered_by_likes">Sort By Likes</a>
      <a class="btn btn-danger col-xs-2" href="/posts_ordered_by_comments">Sort By comments</a>
  </div>

  <div class="row">
      <div class="col-md-12 postIndexListTable">
      
          <% @posts.each do |post| %>
          
              <div class="container postSingle">
                <div class="row ">
                  <h5 class="col-md-5"><%= link_to post.title, post %></h5>
                  <h5 class="col-md-3"><%= post.user.full_name %></h5>
                  <h5 class="col-md-2">Likes: <%= post.likes %></h5>
                  <h5 class="col-md-2">Comments: <%= post.comments.length%></h5>
                </div>
              </div>
         
          <% end %>
      </div>
   
  </div>
</div>

